<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:cc="http://xmlns.jcp.org/jsf/composite"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core">

    <!-- INTERFACE -->
    <cc:interface>
        <cc:attribute name="acteur"/>
    </cc:interface>

    <!-- IMPLEMENTATION -->
    <cc:implementation>
            <h:panelGroup id="messagePanel" layout="block">
                <h:messages errorStyle="color: red" infoStyle="color: green" layout="table"/>
            </h:panelGroup>
            <h:form>
                <h:panelGrid columns="2">
                    <h:outputLabel value="#{bundle.CreatePiloteLabel_prenom}" for="prenom" />
                    <h:inputText id="prenom" value="#{piloteController.selected.prenom}" title="#{bundle.CreatePiloteTitle_prenom}" />
                    <h:outputLabel value="#{bundle.CreatePiloteLabel_nom}" for="nom" />
                    <h:inputText id="nom" value="#{piloteController.selected.nom}" title="#{bundle.CreatePiloteTitle_nom}" />
                </h:panelGrid>
                <br />
                <h:commandLink action="#{piloteController.create}" value="#{bundle.CreatePiloteSaveLink}" />
                <br />
                <br />
                <h:commandLink action="#{piloteController.prepareList}" value="#{bundle.CreatePiloteShowAllLink}" immediate="true"/>
                <br />
                <br />
                <h:link outcome="/index" value="#{bundle.CreatePiloteIndexLink}"/>
            </h:form>
    </cc:implementation>

</html>
